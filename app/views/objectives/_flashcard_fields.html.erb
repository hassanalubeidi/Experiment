<div class="nested-fields ui segment">
  <div class="field">
    Flashcard front:
    <%= f.text_area :top, placeholder: "Eg: Define relative molecular mass" %>
    Flashcard back:
    <%= f.text_area :bottom, placeholder: "Eg: Mass of a molecule relative to 1/2 the mass of a 12C atom" %>
    <p>Struggling for words? Upload a picture of what went wrong! </p> <%= f.file_field :picture %>
    <div class="ui divider"></div>
  </div>
  Keypoints:
  <div id='tasks' class="ui raised segment">
    <% Line.all.each.with_index do |line,ab| %>

      <%= f.fields_for :keypoints do |keypoint| %>
      
        <%= render 'keypoint_fields', :f => keypoint %>
      <% end %>
    <% end %>

      <div class='links'>
        <%= link_to_add_association 'Add a keypoint', f, :keypoints, class: "ui button" %>
      </div>
    </div>
    <%= link_to_remove_association "Remove flashcard", f, class: "ui red fluid button" %>
</div>

