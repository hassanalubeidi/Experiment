<div class="nested-fields ui segment">
  <div class="field">
    Sub Objective:
    <%= f.text_area :text, placeholder: "Enter your question here" %>
    <%= link_to_remove_association "remove objective", f, class: "ui bottom attached red fluid button" %>
    <div class="ui divider"></div>
  </div>
  Objectives:
  <div id='tasks' class="ui raised segment">
    <% Line.all.each.with_index do |line,ab| %>

      <%= f.fields_for :keypoints do |keypoint| %>
      
        <%= render 'keypoint_fields', :f => keypoint %>
      <% end %>
    <% end %>

      <div class='links'>
        <%= link_to_add_association 'add objective', f, :keypoints, class: "ui button" %>
      </div>
    </div>
</div>
