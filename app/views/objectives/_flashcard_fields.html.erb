
<div class="nested-fields ui segment">
  <div class="field">
    Flashcard front:
    <%= f.text_area :top, placeholder: "Eg: Define relative molecular mass", class: "tinymce" %>
    <div class="ui divider"></div>
  </div>
  Keypoints:
  <div id='tasks' class="ui raised segment">
    
      <%= f.fields_for :keypoints do |keypoint| %>
      
        <%= render 'keypoint_fields', :f => keypoint %>
      <% end %>
    

      <div class='links'>
        <%= link_to_add_association 'Add a keypoint', f, :keypoints, class: "ui button add-keypoint" %>
      </div>
    </div>
    <%= link_to_remove_association "Remove flashcard", f, class: "ui red fluid button" %>
</div>

