<h1>Listing answers</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>User</th>
      <th>Text</th>
      <th>Marks integer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.question %></td>
        <td><%= answer.user %></td>
        <td><%= answer.text %></td>
        <td><%= answer.marks_integer %></td>
        <td><%= link_to 'Show', question_answer_path(answer) %></td>
        <td><%= link_to 'Edit', edit_question_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
