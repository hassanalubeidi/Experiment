<%= form_for(@question, :html => {:class => 'ui form'}) do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
      <% @question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :subject %><br>
    <% subject_array = [] %>
    <% Subject.all.each do |subject| %>
      
      <% subject_array.push(subject.name) %>
    <% end %>
    <%= select_tag(:subject, options_for_select(subject_array)) %>
  </div>
  <div class="field">

    <%= f.label :topic_id %><br>
    <%= f.grouped_collection_select(:topic_id,Subject.all,:topics,:name,:id,:name, :multiple => true) %>
  </div>
  <div class="field">
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </div>
  <div class="field">
    <%= f.label :total_marks %><br>
    <%= f.number_field :total_marks %>
  </div>
  <div class="actions">
    <%= f.submit class: "ui primary button" %>
  </div>
<% end %>
